 {{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <footer class="post-meta">
        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" title="{{author.name}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        פורסם ע״י {{author}}, 
        {{tags prefix=" תגיות: "}}. 
        <time class="post-date" datetime="{{date format='DD-MM-YYYY'}}">{{date format="DD-MM-YYYY"}}</time>
    </footer>
    <section class="post-excerpt pdt10">
        <p>{{excerpt words="46"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <post-image>
        {{#if image}}<div class="hidden-xs hidden-sm"><a href="{{url}}"><img src="{{image}}" alt="{{{title}}}" title="{{{title}}}" /></a></div>{{/if}}
    </post-image>
    
</article>
{{/foreach}}

